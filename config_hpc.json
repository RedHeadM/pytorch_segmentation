{
    "name": "Deeplab_supergule_0.0",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/tcn_data/videos/train",
            "view_idx_adapt": 1,
            "view_idx_labled": 0,
            "number_views": 2,
            "batch_size": 16,
            "base_size": 300,
            "crop_size": 300,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/tcn_data/videos/val_same_bot",
            "batch_size": 32,
            "crop_size": 300,
            "view_idx_labled": 1,
            "view_idx_adapt": 0,
            "number_views": 2,
            "shuffle": true,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "superpoint": {
        "nms_radius": 4,
        "keypoint_threshold": 0.005,
        "max_keypoints": 100
    },
    "superglue": {
        "resize" : [300,300],
        "weights": "outdoor",
        "sinkhorn_iterations": 20,
        "match_threshold": 0.2
    },
    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved_superglue/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}

