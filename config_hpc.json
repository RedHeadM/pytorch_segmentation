{
    "name": "DeepLab_eval_3p_view_0_to_1_mulit_obj_res_256_base_size_300",
    "n_gpu": 4,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/texture_multibot_push_left10030/videos/train",
            "batch_size": 64,
            "view_idx": 0,
            "number_views": 1,
            "base_size": 300,
            "crop_size": 256,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 16
        }
    },

    "val_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/texture_multibot_push_left10030/videos/val",
            "batch_size": 8,
            "crop_size": 300,
            "view_idx": 1,
            "number_views": 2,
            "shuffle": true,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
