{
    "name": "Deeplab_cont_nca0.1_seg4_4to1_sgd_x4",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/mv_data/texture_multibot_push_left10080/videos/train_adaptation",
            "view_idx_adapt": 1,
            "view_idx_labled": 4,
            "examples_per_seq": 4,
            "number_views": 5,
            "batch_size": 8,
            "base_size": 300,
            "crop_size": 300,
            "augment": true,
            "shuffle": false,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/mv_data/texture_multibot_push_left10080/videos/val",
            "batch_size": 32,
            "crop_size": 300,
            "examples_per_seq": 0,
            "view_idx_labled": 1,
            "view_idx_adapt": 1,
            "number_views": 2,
            "shuffle": false,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 5000,
        "save_dir": "saved_const_2/",
        "save_period": 20,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved_const/runs",
        "log_per_iter": 5,

        "val": true,
        "val_per_epochs": 20
    }
}

