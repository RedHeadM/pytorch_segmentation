{
    "name": "Deeplab_supergule_data7_noXYflip_1to2_sg_0.5",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/mv_data/texture_multibot_push_left10070/videos/train_adaptation",
            "view_idx_adapt": 2,
            "view_idx_labled": 4,
            "examples_per_seq": 1,
            "number_views": 5,
            "batch_size": 8,
            "base_size": 300,
            "crop_size": 300,
            "augment": true,
            "shuffle": false,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/tmp/mv_data/texture_multibot_push_left10070/videos/val",
            "batch_size": 32,
            "crop_size": 300,
            "examples_per_seq": 0,
            "view_idx_labled": 1,
            "view_idx_adapt": 1,
            "number_views": 2,
            "shuffle": false,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "differential_lr": false,
        "args":{
            "lr": 0.01
        }
    },
    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 10000,
        "save_dir": "saved_test_const/",
        "save_period": 1000,
  
        "monitor": "max Mean_IoU",
        "early_stop": 100,
        
        "tensorboard": true,
        "log_dir": "saved_test_const/runs",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 500
    }
}

