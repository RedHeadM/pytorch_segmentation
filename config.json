{
    "name": "Deeplab",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/media/markus/DATA/mutil_tex_3p/texture_multibot_push_left10050_bot/videos/val",
            "view_idx_adapt": 1,
            "view_idx_labled": 0,
            "number_views": 2,
            "batch_size": 4,
            "examples_per_seq": 1,
            "base_size": 256,
            "crop_size": 256,
            "augment": true,
            "shuffle": false,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 4
        }
    },

    "val_loader": {
        "type": "MVB",
        "args":{
            "data_dir": "/media/markus/DATA/mutil_tex_3p/texture_multibot_push_left10050_bot/videos/val",
            "batch_size": 32,
            "crop_size": 256,
            "examples_per_seq": 0,
            "view_idx_labled": 1,
            "view_idx_adapt": 0,
            "number_views": 2,
            "shuffle": true,
            "val": true,
            "split": "val",
            "num_workers": 2
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": false,
        "args":{
            "lr": 0.0001
        }
    },

    "superpoint": {
        "nms_radius": 4,
        "keypoint_threshold": 0.005,
        "max_keypoints": 100
    },
    "superglue": {
        "resize" : [300,300],
        "weights": "outdoor",
        "sinkhorn_iterations": 20,
        "match_threshold": 0.2
    },
    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 10000,
        "save_dir": "saved/",
        "save_period": 1000,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 200,

        "val": true,
        "val_per_epochs": 1000
    }
}
